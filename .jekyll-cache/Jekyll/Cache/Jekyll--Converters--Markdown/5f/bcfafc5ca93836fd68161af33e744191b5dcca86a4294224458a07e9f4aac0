    <span class="nx">jQuery</span><span class="p">(</span><span class="dl">'</span><span class="s1">object#mysvg-logo</span><span class="dl">'</span><span class="p">)[</span><span class="mi">0</span><span class="p">].</span><span class="nx">addEventListener</span><span class="p">(</span>
        <span class="dl">'</span><span class="s1">load</span><span class="dl">'</span><span class="p">,</span>
