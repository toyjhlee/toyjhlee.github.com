            <span class="nx">jQuery</span><span class="p">(</span><span class="dl">'</span><span class="s1">object#mysvg-logo</span><span class="dl">'</span><span class="p">).</span><span class="nx">css</span><span class="p">(</span><span class="dl">'</span><span class="s1">width</span><span class="dl">'</span><span class="p">,</span> <span class="dl">'</span><span class="s1">181px</span><span class="dl">'</span><span class="p">)</span>
